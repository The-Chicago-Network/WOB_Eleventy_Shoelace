{% include 'head.liquid' %}
<header>
		<sl-avatar shape="circle" label="Circle avatar" image="../../{{originalHeadshotURL}}" id="largeAvatar"></sl-avatar>
		<div class="headerCopy">
		<h1>{{ title }}</h1>
			<div class="titleEmployer">
				<p class="title">{{currentTitle}}</p>
				<p class="employer">{{currentOrg}}</p>
			</div>
		</div>
</header>

<div class="bioContainer">
{% if linkedin or tiktok or twitter or aboutme or insta or orgURL or snapchat or personalURL or resumeFile %}
<p class="contactLinks">Contact me on:
{% if linkedin %}
<a href="{{linkedin}}">LinkedIn</a>
{% endif %}
{% if tiktok %}
<a href="{{tiktok}}">TikTok</a>
{% endif %}
{% if twitter %}
<a href="{{twitter}}">Twitter</a>
{% endif %}
{% if aboutme %}
<a href="{{aboutme}}">About.Me</a>
{% endif %}
{% if insta %}
<a href="{{insta}}">Instagram</a>
{% endif %}
{% if orgURL %}
<a href="{{orgURL}}">{{orgURL}}</a>
{% endif %}
{% if snapchat %}
<a href="{{snapchat}}">Snapchat</a>
{% endif %}
{% if personalURL %}
<a href="{{personalURL}}">{{personalURL}}</a>
{% endif %}
{% if resumeFile %}
<br>
<sl-button class="downloadButton" type="button" variant="primary" size="small" href="/{{resumeFile}}" pill>
	<sl-icon slot="prefix" name="paperclip"></sl-icon>
	Download Resume
</sl-button>
{% endif %}
<hr>
</p>
{% endif %}

