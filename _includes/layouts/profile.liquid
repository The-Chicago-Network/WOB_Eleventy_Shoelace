{% comment %}
<sl-button type="button" variant="primary" class="download">Download PDF</sl-button>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
	const downloadButton = document.querySelector('.download');
	downloadButton.addEventListener('click', () => {
		 const printElement = document.querySelector('.bioContainer');
		const config = {
			margin:       1,
			filename:     '{{title | replace: " ", "_"}}-profile-womenlead.io.pdf',
			image:        { type: 'jpeg', quality: 1 },
			html2canvas:  { scale: 1 },
			jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' },
			pagebreak: { mode: 'avoid-all' }
		};
		html2pdf().set(config).from(printElement).save();

	});
</script>
{% endcomment %}

